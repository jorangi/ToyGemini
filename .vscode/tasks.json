{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend",
            // ✨ --- type을 "shell"에서 "process"로 변경합니다 --- ✨
            "type": "process", 
            "command": "${workspaceFolder}/Backend/.venv/Scripts/uvicorn.exe",
            "args": [
                "main:app",
                "--reload",
                "--reload-exclude=tools/generated_*"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Backend"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "server_tasks",
                "showReuseMessage": false
            }
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/Frontend"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "server_tasks",
                "showReuseMessage": false
            }
        },
        {
            "label": "Start All Servers",
            "dependsOn": [
                "Run Backend",
                "Run Frontend"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "server_tasks"
            }
        }
    ],
    "compounds": [
        {
            "label": "Start All Dev Servers on Open",
            "dependsOn": ["Start All Servers"],
            "preLaunchTask": "Start All Servers"
        }
    ]
}